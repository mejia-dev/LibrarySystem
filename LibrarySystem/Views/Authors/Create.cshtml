@{
  Layout = "_Layout";
}

@model LibrarySystem.Models.Author

<h4>Add new author</h4>
<hr />

<p><strong>NOTE:</strong> You need to have at least one author before you can add an book!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Authors") to add an author</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.AuthorFirstName)
  @Html.TextBoxFor(model => model.AuthorFirstName)

  @Html.LabelFor(model => model.AuthorLastName)
  @Html.TextBoxFor(model => model.AuthorLastName)

  <input type="submit" value="Add new author" class="btn btn-default"/>
}

<p>@Html.ActionLink("Show all authors", "Index")</p>
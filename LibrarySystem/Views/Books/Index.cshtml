@{
  Layout = "_Layout";
}

@using LibrarySystem.Models;

<h2>@ViewBag.PageTitle</h2>
<hr />
@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
}
else
{
  <ul>
    @foreach (Book book in Model)
    {
      <li>
        <h5>@Html.ActionLink($"{book.BookTitle}", "Details", new { id = book.BookId })</h5>
        Written by @Html.ActionLink($"{book.Author.AuthorLastName},{book.Author.AuthorFirstName}", "Details", new { id = book.Author.AuthorId })
        @* @book.Author.AuthorLastName *@
      </li>
    }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add new book", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>